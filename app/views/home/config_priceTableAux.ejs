<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Graffio</title>
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="../assets/vendor/bootstrap/css/bootstrap.min.css">
    <link href="../assets/vendor/fonts/circular-std/style.css" rel="stylesheet">
    <link rel="stylesheet" href="../assets/libs/css/style.css">
    <link rel="stylesheet" href="../assets/vendor/fonts/fontawesome/css/fontawesome-all.css">
    <link rel="stylesheet" type="text/css" href="../assets/vendor/datatables/css/dataTables.bootstrap4.css">
    <link rel="stylesheet" type="text/css" href="../assets/vendor/datatables/css/buttons.bootstrap4.css">
    <link rel="stylesheet" type="text/css" href="../assets/vendor/datatables/css/select.bootstrap4.css">
    <link rel="stylesheet" type="text/css" href="../assets/vendor/datatables/css/fixedHeader.bootstrap4.css">

    <link rel="stylesheet" type="text/css" href="css/style.css">
    <link rel="stylesheet" type="text/css" href="css/no-more-tables.css">

</head>

<body>

    <div class="dashboard-main-wrapper">

        <div id="mainDashboard"></div>

        <div class="dashboard-wrapper">

            <div class="container-fluid dashboard-content ">

                <div id="mainDashboardHeader"></div>

                <div class="row">
                    <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                        <div class="card">
                            <div class="card-header">
                                <h5 class="mb-0">Lista de Tabelas de Preço Auxiliares Cadastradas
                                    <button id="btnPreRegisterPriceTableAux"
                                        class="btn btn-rounded btn-success floatingRightButton" data-toggle="modal"
                                        data-target="#registerPriceTableAuxModal" data-backdrop="static">Adicionar
                                    </button>
                                </h5>
                            </div>
                            <div class="card-body">
                                <div class="no-more-tables">
                                    <table id="no-more-tables"
                                        class="table table-striped table-bordered table-condensed cf"
                                        style="width:100%">
                                        <thead class="cf">
                                            <tr>
                                                <th>ID</th>
                                                <th>Nome</th>
                                                <th>Período</th>
                                                <th>Valor</th>
                                                <th>Perda de Ticket</th>
                                                <th>Tolerância</th>
                                                <th>Ações</th>
                                            </tr>
                                        </thead>
                                        <tbody id="priceTableAuxTableBody"></tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>

            <div class="container">

                <!-- Modal para Inserção de Usuários -->
                <div class="modal fade" id="registerPriceTableAuxModal" role="dialog">
                    <div class="modal-dialog">

                        <!-- Modal content-->
                        <div class="modal-content">
                            <div class="modal-header">
                                <h4 class="modal-title">Insira as Informações da Nova Tabela Auxiliar</h4>
                            </div>
                            <div class="modal-body">
                                <form id="registerPriceTableAuxForm">
                                    <div class="form-group">
                                        <label for="nome" class="col-form-label">Nome</label>
                                        <input id="nome" type="text" class="form-control">
                                    </div>
                                    <div class="form-group">
                                        <label for="periodo" class="col-form-label">Período</label>
                                        <input id="periodo" type="number" class="form-control">
                                    </div>
                                    <div class="form-group">
                                        <label for="valor" class="col-form-label">Valor</label>
                                        <input id="valor" type="number" step="0.01" class="form-control">
                                    </div>
                                    <div class="form-group">
                                        <label for="valorPerda" class="col-form-label">Perda do Ticket</label>
                                        <input id="valorPerda" type="number" step="0.01" class="form-control">
                                    </div>
                                    <div class="form-group">
                                        <label for="tolerancia" class="col-form-label">Tolerância</label>
                                        <input id="tolerancia" type="number" class="form-control">
                                    </div>
                                </form>
                            </div>
                            <div class="modal-footer">
                                <button id="btnDAORegisterPriceTableAux" type="button"
                                    class="btn btn-rounded btn-success">Registrar</button>
                                <button type="button" class="btn btn-rounded btn-danger"
                                    data-dismiss="modal">Cancelar</button>
                            </div>
                        </div>

                    </div>
                </div>

                <!-- Modal para Edição de Usuários -->
                <div class="modal fade" id="updatePriceTableAuxModal" role="dialog">
                    <div class="modal-dialog">

                        <!-- Modal content-->
                        <div class="modal-content">
                            <div class="modal-header">
                                <h4 class="modal-title">Insira as Novas Informações da Tabela de Preço Auxiliar</h4>
                            </div>
                            <div class="modal-body">
                                <form id="updatePriceTableAuxForm">
                                    <div class="form-group">
                                        <label for="id_tabela_preco_auxUpd" class="col-form-label">ID</label>
                                        <input id="id_tabela_preco_auxUpd" disabled type="text" class="form-control">
                                    </div>
                                    <div class="form-group">
                                        <label for="nomeUpd" class="col-form-label">Nome</label>
                                        <input id="nomeUpd" type="text" class="form-control">
                                    </div>
                                    <div class="form-group">
                                        <label for="periodoUpd" class="col-form-label">Período</label>
                                        <input id="periodoUpd" type="number" class="form-control">
                                    </div>
                                    <div class="form-group">
                                        <label for="valorUpd" class="col-form-label">Valor</label>
                                        <input id="valorUpd" type="number" step="0.01" class="form-control">
                                    </div>
                                    <div class="form-group">
                                        <label for="valorPerdaUpd" class="col-form-label">Perda do Ticket</label>
                                        <input id="valorPerdaUpd" type="number" step="0.01" class="form-control">
                                    </div>
                                    <div class="form-group">
                                        <label for="toleranciaUpd" class="col-form-label">Tolerância</label>
                                        <input id="toleranciaUpd" type="number" class="form-control">
                                    </div>
                                </form>
                            </div>
                            <div class="modal-footer">
                                <button id="btnDAOUpdatePriceTableAux" type="button"
                                    class="btn btn-rounded btn-success">Alterar</button>
                                <button type="button" class="btn btn-rounded btn-danger"
                                    data-dismiss="modal">Cancelar</button>
                            </div>
                        </div>

                    </div>
                </div>

                <!-- Modal para Exclusão de Usuários -->
                <div class="modal fade" id="deletePriceTableAuxModal" role="dialog">
                    <div class="modal-dialog">

                        <!-- Modal content-->
                        <div class="modal-content">
                            <div class="modal-body">
                                <h4>Você deseja mesmo excluir esta Tabela de Preço Auxiliar?</h4>
                                <h5 id="nomeDel" class="centeredX"></h5>
                                <input id="id_priceTableAuxDel" class="invisible" />
                            </div>
                            <div class="modal-footer">
                                <button id="btnDAODeletePriceTableAux" type="button"
                                    class="btn btn-rounded btn-success">Sim</button>
                                <button type="button" class="btn btn-rounded btn-danger"
                                    data-dismiss="modal">Não</button>
                            </div>
                        </div>

                    </div>
                </div>

            </div>

        </div>

    </div>

    <!-- Optional JavaScript -->
    <script src="../assets/vendor/jquery/jquery-3.3.1.min.js"></script>
    <script src="../assets/vendor/bootstrap/js/bootstrap.bundle.js"></script>
    <script src="../assets/vendor/slimscroll/jquery.slimscroll.js"></script>
    <script src="../assets/vendor/multi-select/js/jquery.multi-select.js"></script>
    <script src="../assets/libs/js/main-js.js"></script>
    <script src="https://cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js"></script>
    <script src="../assets/vendor/datatables/js/dataTables.bootstrap4.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/1.5.2/js/dataTables.buttons.min.js"></script>
    <script src="../assets/vendor/datatables/js/buttons.bootstrap4.min.js"></script>
    <script src="../assets/vendor/datatables/js/data-table.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jszip/3.1.3/jszip.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.36/pdfmake.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.36/vfs_fonts.js"></script>
    <script src="https://cdn.datatables.net/buttons/1.5.2/js/buttons.html5.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/1.5.2/js/buttons.print.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/1.5.2/js/buttons.colVis.min.js"></script>
    <script src="https://cdn.datatables.net/rowgroup/1.0.4/js/dataTables.rowGroup.min.js"></script>
    <script src="https://cdn.datatables.net/select/1.2.7/js/dataTables.select.min.js"></script>
    <script src="https://cdn.datatables.net/fixedheader/3.1.5/js/dataTables.fixedHeader.min.js"></script>

    <!-- Graffio JS que contém os HTML Sections-->
    <script src="js/htmlSections/dashboardHeader.js"></script>
    <script src="js/htmlSections/dashboardSidebar.js"></script>
    <script src="js/htmlSections/header.js"></script>

    <!-- Graffio JS que contém o BusinessJS-->
    <script src="js/config/priceTableAux.js"></script>

    <!-- Graffio JS que contém a Autenticação-->
    <script src="js/system/authenticationLogout.js"></script>

</body>

<script>

    window.onload = function () {

        var loggedUserNome = localStorage.getItem("loggedUserNome");
        var loggedUserCargo = localStorage.getItem("loggedUserCargo");
        var token = localStorage.getItem("token");

        var mainDashboard = document.getElementById("mainDashboard");
        var mainDashboardHeader = document.getElementById("mainDashboardHeader");

        setDashboardHeader(mainDashboard);
        setDashboardSidebar(mainDashboard);
        setPageHeader(mainDashboardHeader, "Configuração de Tabelas de Preço");

        document.getElementById("loggedUserNome").innerHTML = loggedUserNome;
        document.getElementById("loggedUserCargo").innerHTML = loggedUserCargo;

        DAOgetAllPriceTableAuxs();

    }

</script>

</html>