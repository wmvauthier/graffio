<script>

    window.onload = function () {

        var loggedUserNome = localStorage.getItem("loggedUserNome");
        var loggedUserCargo = localStorage.getItem("loggedUserCargo");
        var token = localStorage.getItem("token");

        var mainDashboard = document.getElementById("mainDashboard");
        var mainDashboardHeader = document.getElementById("mainDashboardHeader");

        setDashboardHeader(mainDashboard);
        setDashboardSidebar(mainDashboard);
        setPageHeader(mainDashboardHeader, "Movimento do Estacionamento");

        document.getElementById("loggedUserNome").innerHTML = loggedUserNome;
        document.getElementById("loggedUserCargo").innerHTML = loggedUserCargo;

        var courtyards = httpGet(`http://${IP_DO_SERVIDOR}:3000/courtyard`);
        var terminals = httpGet(`http://${IP_DO_SERVIDOR}:3000/terminal`);
        var courtyardArea = document.getElementById("courtyardArea");
        var terminalArea = document.getElementById("terminalArea");

        courtyards.forEach(element => {
            var n = 12 / courtyards.length;
            var item = document.createElement('div');
            item.innerHTML = `<label class="text-sm-right">${element.nome}</label>
                                            <div class="switch-button switch-button-success">
                                                <input type="checkbox" checked="" name="switchCourtyard${element.id_patio}" id="switchCourtyard${element.id_patio}"><span>
                                                    <label for="switchCourtyard${element.id_patio}"></label></span>
                                            </div>`;
            item.classList = `col-${n} col-sm-${n} col-lg-${n} pt-1`;
            courtyardArea.appendChild(item);
        });

        terminals.forEach(element => {
            var n = 12 / terminals.length;
            var item = document.createElement('div');
            item.innerHTML = `<label class="text-sm-right">${element.descricao}</label>
                                            <div class="switch-button switch-button-success">
                                                <input type="checkbox" checked="" name="switchTerminal${element.id_patio}" id="switchTerminal${element.id_patio}"><span>
                                                    <label for="switchTerminal${element.id_patio}"></label></span>
                                            </div>`;
            item.classList = `col-${n} col-sm-${n} col-lg-${n} pt-1`;
            terminalArea.appendChild(item);
        });

        DAOgetAllDocuments();

    }

</script>

