<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Graffio</title>
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="../assets/vendor/bootstrap/css/bootstrap.min.css">
    <link href="../assets/vendor/fonts/circular-std/style.css" rel="stylesheet">
    <link rel="stylesheet" href="../assets/libs/css/style.css">
    <link rel="stylesheet" href="../assets/vendor/fonts/fontawesome/css/fontawesome-all.css">
    <link rel="stylesheet" type="text/css" href="../assets/vendor/datatables/css/dataTables.bootstrap4.css">
    <link rel="stylesheet" type="text/css" href="../assets/vendor/datatables/css/buttons.bootstrap4.css">
    <link rel="stylesheet" type="text/css" href="../assets/vendor/datatables/css/select.bootstrap4.css">
    <link rel="stylesheet" type="text/css" href="../assets/vendor/datatables/css/fixedHeader.bootstrap4.css">

    <link rel="stylesheet" type="text/css" href="css/style.css">
    <link rel="stylesheet" type="text/css" href="css/no-more-tables.css">

</head>

<body>

    <div class="dashboard-main-wrapper">

        <div id="mainDashboard"></div>

        <div class="dashboard-wrapper">

            <div class="container-fluid dashboard-content ">

                <div id="mainDashboardHeader"></div>

                <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
                    <div id="terminalWidgets" class="carousel-inner">
                    </div>
                </div>

                <div class="page-breadcrumb">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                        </ol>
                    </nav>
                </div>

                <div class="row">
                    <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                        <div class="card">
                            <div class="card-header">
                                <h5 class="mb-0">Lista de Terminais Cadastrados
                                    <button id="btnPreRegisterTerminal"
                                        class="btn btn-rounded btn-success floatingRightButton" data-toggle="modal"
                                        data-target="#registerTerminalModal" data-backdrop="static">Adicionar
                                    </button>
                                </h5>
                            </div>
                            <div class="card-body">
                                <div class="no-more-tables">
                                    <table id="no-more-tables"
                                        class="table table-striped table-bordered table-condensed cf"
                                        style="width:100%">
                                        <thead class="cf">
                                            <tr>
                                                <th>ID</th>
                                                <th>Descrição</th>
                                                <th>IP</th>
                                                <th>Pátio</th>
                                                <th>Função</th>
                                                <th>IP da Cancela</th>
                                                <th>Ações</th>
                                            </tr>
                                        </thead>
                                        <tbody id="terminalTableBody"></tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>

            <div class="container">

                <!-- Modal para Inserção de Usuários -->
                <div class="modal fade" id="registerTerminalModal" role="dialog">
                    <div class="modal-dialog">

                        <!-- Modal content-->
                        <div class="modal-content">
                            <div class="modal-header">
                                <h4 class="modal-title">Insira as Informações do Novo Terminal</h4>
                            </div>
                            <div class="modal-body">
                                <form id="registerTerminalForm">
                                    <div class="form-group">
                                        <label for="descricao" class="col-form-label">Descrição</label>
                                        <input id="descricao" type="text" class="form-control">
                                    </div>
                                    <div class="form-group">
                                        <label for="ip" class="col-form-label">IP</label>
                                        <input id="ip" type="text" class="form-control validationInput_IP">
                                    </div>
                                    <div class="form-group">
                                        <label for="ip_cancela" class="col-form-label">IP da Cancela</label>
                                        <input id="ip_cancela" type="text" class="form-control validationInput_IP">
                                    </div>
                                    <div class="form-group">
                                        <label for="patio" class="col-form-label">Pátio</label>
                                        <select id="patio" class="form-control">
                                            <option disabled selected>Selecione o Pátio desejado</option>
                                            <option>1</option>
                                        </select>
                                    </div>
                                    <div class="form-group">
                                        <label for="funcao" class="col-form-label">Função do Terminal</label>
                                        <select id="funcao" class="form-control">
                                            <option disabled selected>Função do Terminal</option>
                                            <option>Terminal Gama</option>
                                        </select>
                                    </div>
                                </form>
                            </div>
                            <div class="modal-footer">
                                <button id="btnDAORegisterTerminal" type="button"
                                    class="btn btn-rounded btn-success">Registrar</button>
                                <button type="button" class="btn btn-rounded btn-danger"
                                    data-dismiss="modal">Cancelar</button>
                            </div>
                        </div>

                    </div>
                </div>

                <!-- Modal para Edição de Usuários -->
                <div class="modal fade" id="updateTerminalModal" role="dialog">
                    <div class="modal-dialog">

                        <!-- Modal content-->
                        <div class="modal-content">
                            <div class="modal-header">
                                <h4 class="modal-title">Insira as Novas Informações do Terminal</h4>
                            </div>
                            <div class="modal-body">
                                <form id="updateTerminalForm">
                                    <div class="form-group">
                                        <label for="id_terminalUpd" class="col-form-label">ID</label>
                                        <input id="id_terminalUpd" disabled type="text" class="form-control">
                                    </div>
                                    <div class="form-group">
                                        <label for="descricaoUpd" class="col-form-label">Descrição</label>
                                        <input id="descricaoUpd" type="text" class="form-control">
                                    </div>
                                    <div class="form-group">
                                        <label for="ipUpd" class="col-form-label">IP</label>
                                        <input id="ipUpd" type="text" class="form-control validationInput_IP">
                                    </div>
                                    <div class="form-group">
                                        <label for="ip_cancelaUpd" class="col-form-label">IP da Cancela</label>
                                        <input id="ip_cancelaUpd" type="text" class="form-control validationInput_IP">
                                    </div>
                                    <div class="form-group">
                                        <label for="patioUpd" class="col-form-label">Pátio</label>
                                        <select id="patioUpd" class="form-control">
                                            <option disabled selected>Selecione o Pátio desejado</option>
                                            <option>1</option>
                                        </select>
                                    </div>
                                    <div class="form-group">
                                        <label for="funcaoUpd" class="col-form-label">Função do Terminal</label>
                                        <select id="funcaoUpd" class="form-control">
                                            <option disabled selected>Função do Terminal</option>
                                            <option>Terminal Gama</option>
                                        </select>
                                    </div>
                                </form>
                            </div>
                            <div class="modal-footer">
                                <button id="btnDAOUpdateTerminal" type="button"
                                    class="btn btn-rounded btn-success">Alterar</button>
                                <button type="button" class="btn btn-rounded btn-danger"
                                    data-dismiss="modal">Cancelar</button>
                            </div>
                        </div>

                    </div>
                </div>

                <!-- Modal para Exclusão de Usuários -->
                <div class="modal fade" id="deleteTerminalModal" role="dialog">
                    <div class="modal-dialog">

                        <!-- Modal content-->
                        <div class="modal-content">
                            <div class="modal-body">
                                <h4>Você deseja mesmo excluir este Terminal?</h4>
                                <h5 id="nomeDel" class="centeredX"></h5>
                                <input id="id_terminalDel" class="invisible" />
                            </div>
                            <div class="modal-footer">
                                <button id="btnDAODeleteTerminal" type="button"
                                    class="btn btn-rounded btn-success">Sim</button>
                                <button type="button" class="btn btn-rounded btn-danger"
                                    data-dismiss="modal">Não</button>
                            </div>
                        </div>

                    </div>
                </div>

            </div>

        </div>

    </div>

    <!-- Optional JavaScript -->
    <!-- Optional JavaScript -->
    <script src="../assets/vendor/jquery/jquery-3.3.1.min.js"></script>
    <script src="../assets/vendor/bootstrap/js/bootstrap.bundle.js"></script>
    <script src="../assets/vendor/slimscroll/jquery.slimscroll.js"></script>
    <script src="../assets/vendor/multi-select/js/jquery.multi-select.js"></script>
    <script src="../assets/libs/js/main-js.js"></script>
    <script src="../assets/vendor/charts/c3charts/c3.min.js"></script>
    <script src="../assets/vendor/charts/c3charts/d3-5.4.0.min.js"></script>
    <script src="../assets/vendor/charts/c3charts/C3chartjs.js"></script>

    <!-- Graffio JS que contém os Input Validations-->
    <script src="js/system/validationInput.js"></script>
    <script src="js/jquery.mask.js"></script>

    <!-- Graffio JS que contém os HTML Sections-->
    <script src="js/htmlSections/dashboardHeader.js"></script>
    <script src="js/htmlSections/dashboardSidebar.js"></script>
    <script src="js/htmlSections/terminalWidgets.js"></script>
    <script src="js/htmlSections/header.js"></script>

    <!-- Graffio JS que contém o BusinessJS-->
    <script src="js/config/terminal.js"></script>

    <!-- Graffio JS que contém a Autenticação-->
    <script src="js/system/authenticationLogout.js"></script>

    <!-- Graffio JS que contém os Métodos de Requisição-->
    <script src="js/system/httpRequisitions.js"></script>

    <!-- Graffio JS que contém os Métodos de Requisição-->
    <script src="js/system/serverConfig.js"></script>

</body>

<script>

    window.onload = function () {

        var loggedUserNome = localStorage.getItem("loggedUserNome");
        var loggedUserCargo = localStorage.getItem("loggedUserCargo");
        var token = localStorage.getItem("token");

        var mainDashboard = document.getElementById("mainDashboard");
        var mainDashboardHeader = document.getElementById("mainDashboardHeader");
        var terminalWidgets = document.getElementById('terminalWidgets');

        setDashboardHeader(mainDashboard);
        setDashboardSidebar(mainDashboard);

        setPageHeader(mainDashboardHeader, "Configuração de Terminais");

        document.getElementById("loggedUserNome").innerHTML = loggedUserNome;
        document.getElementById("loggedUserCargo").innerHTML = loggedUserCargo;

        DAOgetAllTerminals(terminalWidgets);

    }

</script>

</html>